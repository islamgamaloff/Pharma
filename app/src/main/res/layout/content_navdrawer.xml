<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registertwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mesa"

    tools:context="com.example.islamgsayed.firstapp.navdrawer">

      <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">
    </RelativeLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
      <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <GridLayout
              android:layout_marginTop="40dp"
                android:id="@+id/myGrid1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:padding="15dp"
                android:rowCount="3">
              <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#fff"
                    android:id="@+id/map_places"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"

                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="30dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bluegps"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/imageView2" />
                        <LinearLayout
                            android:background="#f6f8f8"
                            android:layout_width="match_parent"
                            android:layout_height="5dp">

                        </LinearLayout>

                        <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اقرب صيدليه موجوده في مكانك "
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:textStyle="bold"

                            android:layout_weight="0.85"
                            android:id="@+id/textView2" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/makeorderrr"
                    app:cardBackgroundColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp">

                        <ImageView

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bluecart"
                            android:layout_gravity="center_horizontal" />

                        <LinearLayout
                            android:background="#f6f8f8"
                            android:layout_width="match_parent"
                            android:layout_height="5dp">

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" اطلب من اقرب صيدليه ليك "
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#000"

                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#fff"
                    android:layout_width="0dp"
                    android:id="@+id/deasese"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/blueamrad"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/imageView7" />

                        <LinearLayout
                            android:background="#f6f8f8"
                            android:layout_width="match_parent"
                            android:layout_height="5dp">

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الامراض الشائعه"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#000"

                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#ffffff"
                    android:id="@+id/idddd"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:src="@drawable/bluedalel"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            />
                        <LinearLayout
                            android:background="#f6f8f8"
                            android:layout_width="match_parent"
                            android:layout_height="5dp">

                        </LinearLayout>
                        <TextView
                            android:id="@+id/textviewDalel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="دليل الصيدليات"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#000"

                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#ffffff"
                    android:layout_width="0dp"
                    android:id="@+id/HospitalsDic"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bluegps"
                            android:layout_gravity="center_horizontal" />
                        <LinearLayout
                            android:background="#f6f8f8"
                            android:layout_width="match_parent"
                            android:layout_height="5dp">

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اقرب مستشفي في مكانك"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#000"

                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#ffffff"
                    android:layout_width="0dp"
                    android:id="@+id/ReminderCardView"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bluereminder"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/imageView6"

                            />

                        <LinearLayout

                            android:background="#f6f8f8"
                            android:layout_width="match_parent"
                            android:layout_height="5dp">

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ضبط مواعيد الدواء"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#000"

                            android:id="@+id/textView6" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </GridLayout>
        </FrameLayout>

    </RelativeLayout>

</LinearLayout>
