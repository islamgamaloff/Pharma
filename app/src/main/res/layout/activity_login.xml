<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mesa"

    android:orientation="vertical"
    tools:context="com.example.islamgsayed.firstapp.loginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:backgroundTint="#ffffff"
            android:src="@drawable/bluelogo"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_marginTop="25dp"
            android:background="#97c4ff"
            android:layout_width="500dp"
            android:layout_height="3dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout"
            android:orientation="vertical">

        </LinearLayout>


        <EditText
            android:gravity="center"
            android:background="@drawable/blueeusername"
            android:id="@+id/editTextUsername"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="E-mail"
            android:textColorHint="#000"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"

            android:textSize="12dp"

            android:layout_marginTop="44dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true" />



        <EditText


            android:gravity="center"
            android:background="@drawable/bluepass"
            android:textColorHint="#000"
            android:textColor="#000000"
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Password "
            android:inputType="textPassword"
            android:textSize="12dp"


            android:layout_below="@+id/editTextUsername"
            android:layout_alignLeft="@+id/editTextUsername"
            android:layout_alignStart="@+id/editTextUsername" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="75dp"
            android:layout_height="33dp"
            android:text="Sign In"
            android:background="@drawable/bluefullbutton"
            android:textColor="#000"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp" />

        <Button
            android:id="@+id/newaccount"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textSize="10sp"
            android:text="create new Account"
            android:background="@drawable/bluefullbutton"
            android:textColor="#000"
            android:layout_below="@+id/btnlogin"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password"
            android:layout_marginTop="31dp" />


    </RelativeLayout>


</LinearLayout>




